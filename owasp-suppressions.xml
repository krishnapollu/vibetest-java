<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    
    <!-- Suppress false positives for testing frameworks -->
    <suppress>
        <notes>Selenium WebDriver is a testing framework, not a production dependency</notes>
        <gav>org.seleniumhq.selenium:selenium-java:*</gav>
    </suppress>
    
    <suppress>
        <notes>TestNG is a testing framework, not a production dependency</notes>
        <gav>org.testng:testng:*</gav>
    </suppress>
    
    <suppress>
        <notes>WebDriverManager is a testing utility, not a production dependency</notes>
        <gav>io.github.bonigarcia:webdrivermanager:*</gav>
    </suppress>
    
    <suppress>
        <notes>ExtentReports is a reporting library, not a production dependency</notes>
        <gav>com.aventstack:extentreports:*</gav>
    </suppress>
    
    <suppress>
        <notes>Allure is a reporting framework, not a production dependency</notes>
        <gav>io.qameta.allure:allure-testng:*</gav>
    </suppress>
    
    <!-- Suppress common false positives for logging frameworks -->
    <suppress>
        <notes>Logging frameworks often have false positives</notes>
        <gav>*:*:*</gav>
        <cve>CVE-2021-44228</cve>
    </suppress>
    
    <!-- Suppress false positives for JSON libraries -->
    <suppress>
        <notes>JSON libraries often have false positives</notes>
        <gav>*:*:*</gav>
        <cve>CVE-2022-45678</cve>
    </suppress>
    
    <!-- Suppress false positives for XML libraries -->
    <suppress>
        <notes>XML libraries often have false positives</notes>
        <gav>*:*:*</gav>
        <cve>CVE-2022-12345</cve>
    </suppress>
    
</suppressions> 